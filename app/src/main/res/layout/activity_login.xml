<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.romantic.dreamaccount.ui.LoginActivity">

    <include
        layout="@layout/include_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_margin="@dimen/x40"
        android:background="@drawable/shape_login_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/x48"
            android:layout_marginStart="@dimen/x20"
            android:background="@drawable/login_user" />


        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginEnd="@dimen/x20"
            android:background="@null"
            android:inputType="text"
            android:paddingStart="@dimen/x10"
            android:paddingEnd="@dimen/x10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/x30" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginStart="@dimen/x40"
        android:layout_marginEnd="@dimen/x40"
        android:layout_marginBottom="@dimen/x40"
        android:background="@drawable/shape_login_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/x48"
            android:layout_marginStart="@dimen/x20"
            android:background="@drawable/login_password" />


        <EditText
            android:id="@+id/userPwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginEnd="@dimen/x20"
            android:background="@null"
            android:inputType="textPassword"
            android:paddingStart="@dimen/x10"
            android:paddingEnd="@dimen/x10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/x30" />

    </LinearLayout>

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_marginStart="@dimen/x40"
        android:layout_marginTop="@dimen/x40"
        android:layout_marginEnd="@dimen/x40"
        android:layout_marginBottom="@dimen/x40"
        android:background="@drawable/shape_login_sure_bg"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@drawable/selector_login_sure_color_bg"
        android:textSize="@dimen/x30" />


</LinearLayout>
