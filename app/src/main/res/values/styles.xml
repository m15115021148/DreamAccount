<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/title_bg_dan</item>
        <item name="colorPrimaryDark">@color/title_bg_dan</item>
        <item name="colorAccent">@color/title_bg_dan</item>

        <item name="android:launchMode">singleTask</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="MySelfInfoTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/x30</item>
        <item name="android:layout_marginStart">@dimen/x20</item>
    </style>

    <style name="AccountTextViewStyle">
        <item name="android:layout_width">@dimen/x120</item>
        <item name="android:layout_height">@dimen/x60</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/x28</item>
        <item name="android:textColor">@drawable/selector_account_text_color</item>
    </style>

    <style name="PopBottomDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/popwindow_enter</item>
        <item name="android:windowExitAnimation">@anim/popwindow_exit</item>
    </style>

</resources>
