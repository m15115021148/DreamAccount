<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:launchMode">singleTask</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="MySelfInfoTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/x30</item>
        <item name="android:layout_marginStart">@dimen/x20</item>
    </style>

    <style name="AccountTextViewStyle">
        <item name="android:layout_width">@dimen/x200</item>
        <item name="android:layout_height">@dimen/x70</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/x30</item>
        <item name="android:textColor">@drawable/selector_account_text_color</item>
    </style>

</resources>
